<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>My Recipes</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

  <style>
    body {
      background-color: #f2f5f9;
    }
    .navbar-brand {
      font-weight: bold;
    }
    .list-group-item:hover {
      background-color: #f8f9fa;
    }
    .btn-outline-secondary {
      border-radius: 8px;
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
    <div class="container">
      <a class="navbar-brand" href="/">🍽 RecipeApp</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="mainNavbar">
        <ul class="navbar-nav me-auto">
          <% if (user) { %>
            <li class="nav-item">
              <a class="nav-link" href="/recipes">My Recipes</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/ingredients">All Ingredients</a>
            </li>
          <% } %>
        </ul>
        <ul class="navbar-nav">
          <% if (user) { %>
            <li class="nav-item">
              <span class="navbar-text me-3">👋 <%= user.username %></span>
            </li>
            <li class="nav-item">
              <a class="btn btn-outline-light btn-sm" href="/auth/sign-out">Sign out</a>
            </li>
          <% } else { %>
            <li class="nav-item me-2">
              <a class="btn btn-light btn-sm" href="/auth/sign-up">Sign up</a>
            </li>
            <li class="nav-item">
              <a class="btn btn-outline-light btn-sm" href="/auth/sign-in">Sign in</a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Main Container -->
  <div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h1 class="fw-bold text-primary">📘 My Recipes</h1>
        <p class="text-muted mb-0">All your saved recipes in one place</p>
      </div>
      <a href="/recipes/new" class="btn btn-primary btn-lg">
        <i class="bi bi-plus-circle me-1"></i> Add New Recipe
      </a>
    </div>

    <% if (recipes.length > 0) { %>
      <div class="list-group shadow-sm">
        <% recipes.forEach(recipe => { %>
          <div class="list-group-item d-flex justify-content-between align-items-center">
            <div>
              <a href="/recipes/<%= recipe._id %>" class="text-decoration-none text-dark fw-semibold">
                <i class="bi bi-journal-text me-2 text-primary"></i><%= recipe.name %>
              </a>
            </div>
            <a href="/recipes/<%= recipe._id %>/edit" class="btn btn-sm btn-outline-secondary">
              <i class="bi bi-pencil-square"></i> Edit
            </a>
          </div>
        <% }); %>
      </div>
    <% } else { %>
      <div class="alert alert-info text-center py-4">
        You have not created any recipes yet. Start by adding one above!
      </div>
    <% } %>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
