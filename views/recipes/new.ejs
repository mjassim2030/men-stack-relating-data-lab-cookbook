<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Add New Recipe</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

  <style>
    body {
      background-color: #f8f9fa;
    }
    .form-section {
      background: white;
      padding: 2rem;
      border-radius: 16px;
      box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.05);
    }
    .form-check-label {
      text-transform: capitalize;
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <%- include('../partials/_navbar.ejs') %>

  <!-- Page Content -->
  <div class="container py-5">
    <div class="mb-4">
      <h1 class="text-primary fw-bold"><i class="bi bi-journal-plus me-2"></i>Add New Recipe</h1>
      <p class="text-muted">Create a new recipe by entering its details and ingredients.</p>
    </div>

    <form action="/recipes" method="POST" class="form-section">
      <!-- Recipe Name -->
      <div class="mb-3">
        <label for="name" class="form-label">Recipe Name</label>
        <input type="text" id="name" name="name" class="form-control form-control-lg" placeholder="e.g. Tomato Pasta" required />
      </div>

      <!-- Instructions -->
      <div class="mb-4">
        <label for="instructions" class="form-label">Instructions</label>
        <textarea id="instructions" name="instructions" rows="8" class="form-control" placeholder="Step-by-step preparation..." required></textarea>
      </div>

      <!-- Existing Ingredients -->
      <div class="mb-4">
        <label class="form-label">Available Ingredients</label>
        <div class="row">
          <% ingredients.forEach(i => { %>
            <div class="col-md-4">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="ingredients" value="<%= i._id %>" id="ingredient-<%= i._id %>">
                <label class="form-check-label" for="ingredient-<%= i._id %>">
                  <%= i.name %>
                </label>
              </div>
            </div>
          <% }) %>
        </div>
      </div>

      <!-- New Ingredients -->
      <div class="mb-4">
        <label for="newIngredients" class="form-label">Add New Ingredients (one per line)</label>
        <textarea id="newIngredients" name="newIngredients" rows="4" class="form-control" placeholder="e.g. Ginger&#10;Paprika"></textarea>
      </div>

      <!-- Submit Button -->
      <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-success btn-lg">
          <i class="bi bi-check-circle"></i> Create Recipe
        </button>
      </div>
    </form>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>