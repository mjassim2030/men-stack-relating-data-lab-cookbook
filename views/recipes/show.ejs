<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= recipe.name %> | Recipe Details</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

  <style>
    body {
      background-color: #f2f5f9;
    }
    .card {
      border-radius: 16px;
      box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.05);
    }
    .ingredient-list li::marker {
      color: #0d6efd;
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <%- include('../partials/_navbar.ejs') %>

  <div class="container py-5">
    <div class="mb-4 d-flex justify-content-between align-items-center">
      <h1 class="text-primary fw-bold"><i class="bi bi-bookmark-heart me-2"></i><%= recipe.name %></h1>
      <a href="/recipes" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back to My Recipes
      </a>
    </div>

    <div class="card p-4 mb-4 bg-white">
      <h3 class="text-dark mb-3"><i class="bi bi-basket me-2"></i>Ingredients</h3>
      <ul class="ingredient-list list-unstyled ps-3">
        <% recipe.ingredients.forEach(ing => { %>
          <li class="mb-1"><%= ing.name %></li>
        <% }) %>
      </ul>

      <hr class="my-4" />

      <h3 class="text-dark mb-3"><i class="bi bi-journal-text me-2"></i>Instructions</h3>
      <p class="lead text-muted"><%= recipe.instructions %></p>
    </div>

    <form action="/recipes/<%= recipe._id %>?_method=DELETE" method="POST" class="d-flex justify-content-between align-items-center">
      <a href="/recipes/<%= recipe._id %>/edit" class="btn btn-outline-primary">
        <i class="bi bi-pencil-square"></i> Edit Recipe
      </a>
      <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this recipe?');">
        <i class="bi bi-trash"></i> Delete Recipe
      </button>
    </form>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>